<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fornula.domain.admin.mapper.java.AdminMemberMapper">

	<update id = "status">
		UPDATE MEMBER 
		SET MEMBER_STATUS = 0
		WHERE MEMBER_STATUS = 1 OR 2
	</update>
	
	<!-- 아이디로 찾기 -->
	<select id = "findId">
		select * from member 
		where id = #{id}
	</select>
	
		<!-- 01. 회원록록 -->
	<select id="memberList" resultType="com.fornula.domain.admin.dto.AdminMember" >
		select  member_idx,
				id,
				member_status,
				member_date
		from member
		order by member_idx
	</select>
	
</mapper>